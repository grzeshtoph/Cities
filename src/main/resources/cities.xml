<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd"
       xmlns:p="http://www.springframework.org/schema/p">
    <util:list id="cities">
        <bean class="com.springinaction.cities.City" p:name="Chicago" p:state="IL" p:population="2853113"/>
        <bean class="com.springinaction.cities.City" p:name="Atlanta" p:state="GA" p:population="537596"/>
        <bean class="com.springinaction.cities.City" p:name="Dallas" p:state="TX" p:population="1279910"/>
        <bean class="com.springinaction.cities.City" p:name="Houston" p:state="TX" p:population="2242193"/>
        <bean class="com.springinaction.cities.City" p:name="Odessa" p:state="TX" p:population="90943"/>
        <bean class="com.springinaction.cities.City" p:name="El Paso" p:state="TX" p:population="613190"/>
        <bean class="com.springinaction.cities.City" p:name="Jal" p:state="NM" p:population="1996"/>
        <bean class="com.springinaction.cities.City" p:name="Las Cruces" p:state="NM" p:population="91865"/>
    </util:list>

    <bean id="cityTestBean" class="com.springinaction.cities.CityTestBean"
          p:chosenCity="#{cities[2]}"
          p:chosenCityRandom="#{cities[T(java.lang.Math).random() * cities.size()]}"/>
</beans>